{
  "id": "max/plantarium/branch",
  "meta": {
    "description": "Generates branches on a path"
  },
  "outputs": [
    "path"
  ],
  "inputs": {
    "plant": {
      "type": "path",
      "description": "The path to place the branches on.",
      "external": true
    },
    "length": {
      "type": "float",
      "description": "The length of the branches.",
      "min": 0,
      "max": 3,
      "step": 0.05,
      "value": 0.8
    },
    "thickness": {
      "type": "float",
      "description": "The thickness of the branches.",
      "min": 0,
      "max": 1,
      "step": 0.01,
      "value": 0.8
    },
    "offsetSingle": {
      "type": "float",
      "hidden": true,
      "description": "Used to offset every second branch",
      "min": 0,
      "max": 1,
      "value": 0
    },
    "lowestBranch": {
      "type": "float",
      "hidden": true,
      "description": "How low should the branches start. 0 is the bottom, 1 is the top.",
      "min": 0,
      "max": 1,
      "step": 0.01,
      "value": 0.2
    },
    "highestBranch": {
      "type": "float",
      "description": "How high should the branches start. 0 is the bottom, 1 is the top.",
      "hidden": true,
      "min": 0,
      "max": 1,
      "step": 0.01,
      "value": 1
    },
    "depth": {
      "type": "integer",
      "hidden": true,
      "min": 1,
      "value": 1,
      "description": "On how many layern of branches should we place branches."
    },
    "amount": {
      "type": "integer",
      "description": "The amount of branches to generate.",
      "min": 0,
      "max": 64,
      "value": 10
    },
    "resolution_curve": {
      "type": "integer",
      "description": "The resolution of the curve.",
      "value": 32,
      "min": 3,
      "max": 64,
      "setting": "resolution.curve"
    },
    "rotation": {
      "type": "float",
      "description": "The rotation of the branches.",
      "hidden": true,
      "min": 0,
      "max": 360,
      "step": 0.01,
      "value": 0
    }
  }
}
